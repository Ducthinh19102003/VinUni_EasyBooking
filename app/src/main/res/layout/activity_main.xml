<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/studentID"
        android:layout_width="203dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/amaranth_bold"
        android:text="Student"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/profID"
        android:layout_width="203dp"
        android:layout_height="65dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/amaranth_bold"
        android:text="PROFESSOR"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="normal"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/studentID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/studentID"
        app:layout_constraintTop_toBottomOf="@+id/studentID" />

    <Button
        android:id="@+id/adminID"
        android:layout_width="203dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/amaranth_bold"
        android:text="ADMIN"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profID"
        app:layout_constraintTop_toBottomOf="@+id/profID"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="244dp"
        android:layout_height="94dp"
        android:layout_marginTop="28dp"
        android:fontFamily="monospace"
        android:text="VinUni EasyBooking"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2196F3"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/studentID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>